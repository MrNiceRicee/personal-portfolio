---
import Pill from './Pill.astro';
---

<div
  class="h-[calc(100vh-10rem)] relative bg-zinc-100 dark:bg-zinc-900 transition-colors duration-500"
>
  <!-- pill design -->
  <div
    class="background-pattern background-pattern-light dark:hidden pointer-events-none"
  >
  </div>
  <div
    class="background-pattern background-pattern-dark hidden dark:block bg-zinc-900 pointer-events-none"
  >
  </div>
  <Pill title="what i do" />
</div>

<style>
  .background-pattern {
    background-size: 200px 200px;
    /* parallax effect */
    background-attachment: fixed;
    background-position: center;
    background-repeat: repeat;
    mask: linear-gradient(
      to bottom,
      transparent 0%,
      black 15%,
      black 50%,
      transparent 100%
    );
    /* mask: radial-gradient(
      circle at 50% 50%,
      black 0%,
      transparent 60%
    ); */
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
  .background-pattern-dark {
    background-image: url('./graph-paper-dark.svg');
  }
  .background-pattern-light {
    background-image: url('./graph-paper-light.svg');
  }
  .mask-pill {
    mask: radial-gradient(circle at 50% 50%, transparent 45%, black 100%);
  }
</style>

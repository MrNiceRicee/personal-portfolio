---
import DarkModeButton from './DarkModeButton';
---

<nav
  id="nav-bar"
  class="sticky top-0 z-10 text-lg font-light transition-all duration-300"
>
  <div
    class="backdrop-blur-[10px] px-10 w-full h-full flex justify-center items-center"
  >
    <ul class="nav-list relative py-2 w-full max-w-5xl">
      <li class="nav-item">
        <a
          href="#home"
          class="nav-link hover:text-blue-500 focus:text-blue-500 active:text-blue-500 dark:text-gray-300 dark:hover:text-blue-300 dark:focus:text-blue-300"
        >
          home</a
        >
      </li>
      <li class="nav-item">
        <a
          href="#about"
          class="nav-link hover:text-blue-500 focus:text-blue-500 active:text-blue-500 dark:text-gray-300 dark:hover:text-blue-300 dark:focus:text-blue-300"
        >
          about</a
        >
      </li>
      <li class="nav-item ml-auto">
        <a
          href="#contact"
          class="nav-link hover:text-blue-500 focus:text-blue-500 active:text-blue-500 dark:text-gray-300 dark:hover:text-blue-300 dark:focus:text-blue-300"
          >contact</a
        >
      </li><li class="nav-item">
        <DarkModeButton client:only="react" />
      </li>
      <div
        class="nav-border absolute w-full h-[1px] bottom-0 from-zinc-500 via-transparent to-zinc-500"
      >
      </div>
    </ul>
  </div>
  <div
    class="nav-transition-blur py-4 backdrop-blur-[10px] absolute w-full pointer-events-none"
    aria-hidden="true"
  >
  </div>
</nav>
<style>
  .nav-list {
    @apply flex items-center justify-between;
  }
  .nav-item {
    @apply mr-6;
  }
  .nav-item:last-child {
    @apply mr-0;
  }
  .nav-link {
    @apply relative border-none outline-none;
  }
  .nav-transition-blur {
    mask: linear-gradient(black 0%, transparent 100%);
  }
  .nav-link::before {
    @apply absolute left-0 bottom-[-4px] h-1 w-full bg-gradient-to-r
    from-blue-400 to-blue-600;
    content: '';
    transform: scaleX(0);
    transform-origin: bottom;
    /* bezier curve with bounce */
    transition: transform 0.3s cubic-bezier(0.5, -0.55, 0.4, 1.7);
  }
  .nav-link:hover::before {
    transform: scaleX(1);
    transform-origin: right;
  }
  .nav-link:focus::before {
    transform: scaleX(1);
    transform-origin: left;
  }
  .nav-link:active::before {
    transform: scaleX(1);
  }
  .nav-border {
    /* radial gradient */
    background: radial-gradient(
      circle at 50% 50%,
      var(--tw-gradient-stops)
    );
  }
</style>
